#!/bin/bash -e

rm -rf _site
mkdir -p _site/{css,data}
mkdir -p _site/js/vendor

elm make src/elm/Gallows.elm --warn --output _site/js/app.js

cp src/index.html _site/
cp src/CNAME _site/

cp data/*.json _site/data/

# TODO: Actually minimize the css
cp node_modules/normalize.css/normalize.css _site/css/normalize.min.css
cp node_modules/html5shiv/dist/html5shiv.min.js _site/js/vendor/

exit 0
